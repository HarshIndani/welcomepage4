<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signinworker"
    android:background="@drawable/bgblue"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/enter_your_details"
                android:textAlignment="center"
                android:textColor="#0D4F8B"
                android:textSize="35sp"
                android:textStyle="bold"
                android:layout_margin="20dp"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/namelabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Full Name : "
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                 />
            <EditText
                android:id="@+id/wnametext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Full Name"
                android:inputType="textPersonName"
                android:background="#E6FFFE"
                android:ems="20"
                android:padding="8dp"
                android:minHeight="48dp"
                android:textColorHint="#546E7A"
                android:maxHeight="500dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age : "
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                />
            <EditText
                android:id="@+id/wagetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="In Years"
                android:inputType="number"
                android:background="#E6FFFE"
                android:ems="20"
                android:padding="8dp"
                android:minHeight="48dp"
                android:textColorHint="#546E7A"
                android:maxHeight="500dp"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender : "
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                />
            <EditText
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter Gender"
                android:inputType="textPersonName"
                android:background="#E6FFFE"
                android:ems="20"
                android:padding="8dp"
                android:minHeight="48dp"
                android:textColorHint="#546E7A"
                android:maxHeight="500dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/textView28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number : "
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                />
            <EditText
                android:id="@+id/wphonetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter Phone Number"
                android:inputType="phone"
                android:background="#E6FFFE"
                android:ems="20"
                android:padding="8dp"
                android:minHeight="48dp"
                android:textColorHint="#546E7A"
                android:maxHeight="500dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/textView29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address : "
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                />
            <EditText
                android:id="@+id/waddresstext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter Address"
                android:inputType="textPostalAddress"
                android:background="#E6FFFE"
                android:ems="20"
                android:padding="8dp"
                android:minHeight="48dp"
                android:textColorHint="#546E7A"
                android:maxHeight="500dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preferred Work Locality : "
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                />
            <EditText
                android:id="@+id/localitytext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Society/ Area"
                android:inputType="textPersonName"
                android:background="#E6FFFE"
                android:ems="20"
                android:padding="8dp"
                android:minHeight="48dp"
                android:textColorHint="#546E7A"
                android:maxHeight="500dp"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Job Preference : "
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                />
            <EditText
                android:id="@+id/jobpref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter Job Preference"
                android:inputType="textPersonName"
                android:background="#E6FFFE"
                android:ems="20"
                android:padding="8dp"
                android:minHeight="48dp"
                android:textColorHint="#546E7A"
                android:maxHeight="500dp"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minimum Wages : "
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/worker_wagetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="In Rupees"
                android:inputType="number"
                android:background="#E6FFFE"
                android:ems="20"
                android:padding="8dp"
                android:minHeight="48dp"
                android:textColorHint="#546E7A"
                android:maxHeight="500dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Experience"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                />
            <EditText
                android:id="@+id/experiencetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="In Years"
                android:inputType="number"
                android:background="#E6FFFE"
                android:ems="20"
                android:padding="8dp"
                android:minHeight="48dp"
                android:textColorHint="#546E7A"
                android:maxHeight="500dp"
                 />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aadhar No. : "
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                 />
            <EditText
                android:id="@+id/widprooftext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="ID Proof"
                android:inputType="textPersonName"
                android:background="#E6FFFE"
                android:ems="20"
                android:padding="8dp"
                android:minHeight="48dp"
                android:textColorHint="#546E7A"
                android:maxHeight="500dp"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password : "
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter Password"
                android:inputType="textPassword"
                android:background="#E6FFFE"
                android:ems="20"
                android:padding="8dp"
                android:minHeight="48dp"
                android:textColorHint="#546E7A"
                android:maxHeight="500dp"
                 />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SAVE"
                android:backgroundTint="#0D4F8B"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="30dp"
                android:textSize="15dp"
                android:padding="10dp"
                />
            <Button
                android:id="@+id/wsignin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign In"
                android:backgroundTint="#0D4F8B"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="50dp"
                android:textSize="15dp"
                android:padding="10dp"
                 />

        </LinearLayout>





    </LinearLayout>


</ScrollView>